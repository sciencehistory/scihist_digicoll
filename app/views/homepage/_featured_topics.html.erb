<div class="ribbon-section featured-topics">
  <div class='title-div'>
    <h2>Featured Topics</h2>
    <p class="blurb">
      Blurb to come for Featured Topics, that explains something about what they are.
    </p>

  </div>

  <div class="collections-list">
      <% FeaturedTopic.all.slice(0..3).in_groups_of(2).each do |group_of_two| %>
        <div class="d-flex flex-wrap">
          <% group_of_two.each do |ft| %>
            <div class="collection featured-topic">
              <%= link_to ft.path do %>
                <%= image_tag ft.thumb_asset_path, class: "featured-topic-image", width: "100%", alt: "" %>
                <div class="featured-topic-title-wrapper">
                  <h3 class="featured-topic-title"><%= ft.title.upcase %></h3>
                </div>
              <% end %>
            </div>
          <% end %>
        </div>
      <% end %>

    <div class="button-area">
      <%= link_to "View more Featured Topics", "#", class: "btn btn-emphasis btn-lg chf-callout-button" %>
    </div>
  </div>
</div>
