<div class='row featured-topics-title-div'>
    <h2 class="brand-alt-h2">Featured Topics</h2>
</div>
<div class="row featured-topics-list">
    <% FeaturedTopic.all.each do |ft| %>
        <div class="featured-topic">
          <%#= link_to featured_topic_path(category.slug) do %>
            <%= image_tag ft.thumb_asset_path, class: "featured-topic-image", width: "100%" %>
            <div class="featured-topic-title-wrapper">
              <p class="featured-topic-title"><%= ft.title.upcase %></p>
            </div>
          <%# end %>
        </div>
    <% end %>
</div>