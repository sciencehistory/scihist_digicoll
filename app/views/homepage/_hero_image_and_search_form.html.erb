<div class="container-fluid homepage-wrapper">
    <div class="row no-gutters">
        <div class="col-lg">
            <figure class="hero-image">
                <%= image_tag "hero_image_2x.jpg", 'aria-labelledby' => "homeHeroCaption" %>
                <figcaption id="homeHeroCaption">
                    <%= link_to "Wilson College chemistry club", work_path('w6634363x') %>
                </figcaption>
            </figure>
        </div>
        <div class="col-lg home-right-column">
            <div class="row search-container no-gutters">
                <div class="digital-description col-12 col-md-6 col-lg-12">
                  <div class="pre-heading">Science History Institute</div>
                    <h2 class="brand-alt-h2">Digital Collections</h2>
                    <p class="blurb">Search <%= number_with_delimiter(Kithe::Model.where(:published => true, :type => ['Work', 'Collection']).count) %> of our digitized items: artifacts, photographs, advertisements, letters, rare books, oral histories, and more.
                </div>
                <div class="search-callouts col-12 col-md-6 col-lg-12">
                  <%= render partial: 'application/search_form' %>
                </div>
            </div>
        </div>
    </div>
</div>
