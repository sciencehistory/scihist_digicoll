<h1>Works</h1>

<p>
  <%= link_to 'Create New Work', new_work_path, class: "btn btn-primary" %>
</p>
<table class="table">
  <thead>
    <tr>
      <th>ID</th>
      <th>Title</th>
      <th>Created</th>
      <th>Last Modified</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @works.each do |work| %>
      <tr>
        <td><%= work.friendlier_id %></td>
        <td><%= work.title %></td>
        <td><%= l work.created_at.to_date, format: :admin  %></td>
        <td><%= l work.updated_at.to_date, format: :admin %></td>
        <td>
          <div class="dropdown">
              <button class="btn btn-sm btn-primary dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">Admin</button>

            <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
              <%= link_to 'Edit Metadata', edit_work_path(work), class: "dropdown-item" %>
              <%= link_to 'Members', members_for_work_path(work), class: "dropdown-item" %>
              <%= link_to 'Destroy', work, method: :delete, data: { confirm: 'Are you sure?' }, class: "dropdown-item" %>
            </div>
          </div>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


