<%#
  Google analytics tracker code.
  Should be included "near top of <head> tag".
  We should only have these variables set in environments we want to track: production. 
  Universal (until 2023): :google_analytics_property_id
  4.0: (after 2023):      :google_analytics_4_tag_id
%>

<%# Google Analycs Universal (until 2023). Only show this if google_analytics_4_tag_id is not also defined.%>
<% if property_id = ScihistDigicoll::Env.lookup(:google_analytics_property_id) %>
  <script>
    (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
    (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
    m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
    })(window,document,'script','https://www.google-analytics.com/analytics.js','ga');

    ga('create', '<%= property_id %>', 'auto');
    ga('send', 'pageview');
  </script>
<% end %>

<%# Google Analytics 4.0 (after 2023) %>
<% if tag_id = ScihistDigicoll::Env.lookup(:google_analytics_4_tag_id) %>
  <script async src=https://www.googletagmanager.com/gtag/js?id=<%=tag_id %> ></script>
  <script>
      window.dataLayer = window.dataLayer || [];
      function gtag(){dataLayer.push(arguments);}
      gtag('js', new Date());
      gtag('config', '<%=tag_id %>');
  </script>
<% end %>