<div class="my-5">
  <h3>Upload new HOCR</h3>
  <p class="text-muted small mt-3">
    This will replace the <b>HOCR</b> for this asset. This metadata is considered ephemeral and is typically created automatically, so it could get overwritten without notice.</p>
  </p>
  <%= form_with(url: "/admin/asset_files/#{asset.friendlier_id}/submit_hocr", local: true, multipart: true, method: :put) do %>
    <%= file_field_tag 'hocr', accept: "application/xml", disabled: cannot?(:update, @asset) %>
    <%= submit_tag "Upload", class: "btn btn-primary", disabled: cannot?(:update, @asset) %>
  <% end %>
</div>
<div class="my-5">
  <h3>Upload new text-only PDF</h3>
  <p class="text-muted small mt-3">
    This will replace the <b>textonly_pdf</b> derivative for this asset. This metadata is considered ephemeral and is typically created automatically, so it could get overwritten without notice.</p>
  </p>
  <%= form_with(url: "/admin/asset_files/#{asset.friendlier_id}/submit_textonly_pdf", local: true, multipart: true, method: :put) do %>
    <%= file_field_tag 'textonly_pdf', accept: "application/pdf", disabled: cannot?(:update, @asset) %>
    <%= submit_tag "Upload", class: "btn btn-primary", disabled: cannot?(:update, @asset) %>
  <% end %>
</div>