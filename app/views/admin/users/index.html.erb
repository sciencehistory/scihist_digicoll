<h1>Users</h1>

<p>
<%= link_to 'Create New User', new_admin_user_path, class: "btn btn-primary" %>
</p>

<table class="table">
  <thead>
    <tr>
      <th>email</th>
      <th>name</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td>
          <%= user.email %>
          <% if user.locked_out? %>
            <span class="badge badge-danger">Locked out</span>
          <% end %>
          <% if user.admin? %>
            <span class="badge badge-primary">Admin</span>
          <% end %>
        </td>
        <td><%= user.name %></td>
        <td>
          <%= link_to 'Edit', edit_admin_user_path(user), class: "btn btn-sm btn-outline-primary" %>
          <%= link_to 'Send password reset', send_password_reset_admin_user_path(user), method: "post", class: "btn btn-sm btn-outline-primary" %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


