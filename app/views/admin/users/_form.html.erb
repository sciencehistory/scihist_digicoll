<%= simple_form_for([:admin, @user]) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.input :email %>
    <%= f.input :name %>
    <%= f.input :admin %>
    <%= f.input :locked_out %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
