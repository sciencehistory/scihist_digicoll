<figure class="hero-image">
  <%=  image_tag( path_1x,
    srcset: [
      [path_1x, "250w" ], # scaled to 250 width
      [path_2x, "500w" ], # scaled to 500 width
      [path_4x, "1000w"], # scaled to 1000 width
      [path_8x, "2000w"], # scaled to 2000 width
    ],
    'aria-labelledby' => 'homeHeroCaption'
  ) %>
  <figcaption id="homeHeroCaption">
      <%= link_to "#{link_title}", work_path(work_friendlier_id) %>
  </figcaption>
</figure>
