<header>
  <% if genre.present? %>
    <div class="show-genre">
      <%= display_genres %>
    </div>
  <% end %>

  <h1 itemprop="name">
    <%= title %>
    <%= publication_badge(work) %>
    <% if can?(:update, work) %>
      <%= link_to "Edit", admin_work_path(work), class: "btn btn-outline-secondary" %>
    <% end %>
  </h1>


  <% if additional_title.present? %>
    <ul class="additional-titles list-unstyled">
      <% additional_title.each do |title| %>
        <li><h2><%= title %></h2></li>
      <% end %>
    </ul>
  <% end %>

  <% if parent.present? %>
    <ul class="part-of list-unstyled">
      <li>Part of <%= link_to parent.title, work_path(parent) %></li>
    </ul>
  <% end %>

  <% if date_of_work.present?  %>
    <div class="show-date">
        <ul>
          <% DateDisplayFormatter.new(date_of_work).display_dates.each do |interval| %>
            <li>
              <span itemprop="dateCreated">
                <%= interval %>
              </span>
            </li>
          <% end %>
        </ul>
    </div>
  <% end %>
</header>

